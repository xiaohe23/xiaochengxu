/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.logo {
  margin-bottom: 50rpx;
}

.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  padding: 50rpx;
  width: 90%;
  max-width: 400rpx;
}

.input-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.icon {
  font-size: 30rpx;
  color: #bebebe;
  margin-right: 20rpx;
}

.icon-phone:before {
  content: "\e63e";
  font-family: "iconfont";
}

.icon-password:before {
  content: "\e63f";
  font-family: "iconfont";
}

.input {
  flex: 1;
  height: 60rpx;
  border: none;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  border: none;
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin-top: 50rpx;
}

.login-btn:active {
  background-color: #169214;
}
